##password python code
def m1(p):
  has_lower=any(ch.lower() for ch in p)
  has_upper = any(ch.upper() for ch in p)
  has_digit = any(ch.isdigit() for ch in p)
  has_alphnum= any(ch.isalnum() for ch in p)
  has_spch = any(not ch.isalnum() for ch in p)
  if len(p)>=8 and has_lower and has_upper and has_digit and has_alphnum and has_spch:
    return True
  else:
    return False
while True:
  password = input('enter Password: ')
  if m1(password):
    print('valid password')
    break
  else:
    print('invalid Password, please try again')
    continue
